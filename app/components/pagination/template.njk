{% set type = params.results.type | default("results") -%}
<nav class="app-pagination{{- " " + params.classes if params.classes}}" id="pagination-label" aria-label="{{ type }} navigation">
  <ul class="app-pagination__list">
    {%- if params.previous %}
    <li class="app-pagination__item app-pagination__item--prev">
      <a class="app-pagination__link" href="{{ params.previous.href }}">
        <span class="app-pagination__link-title">
          <svg class="app-pagination__icon" xmlns="http://www.w3.org/2000/svg" height="13" width="17">
            <path d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
          </svg>{%- if params.previous.text %}{{ params.previous.text }}{% else %}Previous
          <span class="govuk-visually-hidden">page</span>
          {% endif -%}
        </span>
        {%- if params.previous.label %}
        <span class="app-pagination__link-divider govuk-visually-hidden">:</span>
        <span class="app-pagination__link-label">{{ params.previous.label }}</span>
        {% endif -%}
      </a>
    </li>
    {% endif -%}

    {%- for item in params.items %}
    {%- if item.divider %}
    <li class="app-pagination__item app-pagination__item--divider">{{ item.divider | default("â€¦") }}</li>
    {% else %}
    {%- if item.current %}
    <li class="app-pagination__item app-pagination__item--current"><span class="govuk-visually-hidden">Page </span>{{ item.text }}<span class="govuk-visually-hidden"> (current page) </span></li>
    {% else %}
    <li class="app-pagination__item"><a class="app-pagination__link" href="{{ item.href }}"><span class="govuk-visually-hidden">Page </span>{{ item.text }}</a></li>
    {% endif -%}
    {% endif -%}
    {% endfor -%}

    {%- if params.next %}
    <li class="app-pagination__item app-pagination__item--next">
      <a class="app-pagination__link" href="{{ params.next.href }}">
        <span class="app-pagination__link-title">
          {%- if params.next.text %}{{ params.next.text }}
          {%- else %}Next<span class="govuk-visually-hidden"> page</span>
          {% endif -%}
          <svg class="app-pagination__icon" xmlns="http://www.w3.org/2000/svg" height="13" width="17">
            <path d="m10.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
          </svg>
        </span>
        {%- if params.next.label %}
        <span class="app-pagination__link-divider govuk-visually-hidden">:</span>
        <span class="app-pagination__link-label">{{ params.next.label }}</span>
        {% endif -%}
      </a>
    </li>
    {% endif -%}
  </ul>

  {%- if params.results %}
  <p class="app-pagination__results">Showing <b>{{ params.results.from }}</b> to <b>{{ params.results.to }}</b> of <b>{{ params.results.count }}</b> {{ type }}</p>
  {% endif -%}
</nav>
