<nav class="app-sub-navigation {%- if params.classes %} {{ params.classes }}{% endif -%}"
{%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  <ul class="app-sub-navigation__list">
    {%- for item in params.items %}
      {% if item.href %}
        <li class="app-sub-navigation__item {{ "app-sub-navigation__item--current" if item.active }}">
          <a class="app-sub-navigation__link" {{ "aria-current=page" if item.active }} href="{{ item.href }}" {%- for attribute, value in item.attributes -%} {{ attribute }}="{{ value }}"{% endfor %}>
            {{- item.html | safe if item.html else item.text -}}
          </a>
        </li>
      {% endif %}
    {% endfor -%}
  </ul>
</nav>
