{% extends "layouts/question.njk" %}

{% set title = "Which service does this log relate to?" %}
{% set questionId = "schemeId" %}

{% block question %}
  {{ appAutocomplete({
    decorate: ["logs", log.id, section.id, questionId],
    label: {
      html: macro.heading(title, caption)
    },
    hint: {
      text: "Enter service name or postcode"
    },
    allowEmpty: true,
    showNoOptionsFound: true,
    items: data.questions.scheme
  }) }}

  {% if isOwningOrg == true or isAdmin %}
    <p class="govuk-body govuk-!-margin-bottom-6">
      or <a class="govuk-link" href="/organisations/{{ organisationId }}/schemes">create a new supported housing service</a>.
    </p>
  {% endif %}
{% endblock %}
