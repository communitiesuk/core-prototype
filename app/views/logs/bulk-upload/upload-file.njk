{% extends "layouts/base.njk" %}

{% set title = "Upload your file" %}
{% set caption = "Upload lettings in bulk (2022/23)" %}

{% block pageNavigation %}
  {{ govukBackLink({
    text: "Back",
    href: "/logs/bulk-upload"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      {{ macro.heading(title, caption) }}

      <p class="govuk-body">
        All data must be complete and formatted correctly (CSV <strong>only</strong>) 
        -  if not, we will reject the entire file.
      </p>

      {% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}

      {{ govukFileUpload({
        id: "file-upload-1",
        name: "file-upload-1",
        label: {
          text: "Upload file"
        }
      }) }}

      <a class="govuk-button govuk-button--primary" href="/logs/bulk-upload/file-uploaded">
        Upload
      </a>
    </div>
  </div>
{% endblock %}
